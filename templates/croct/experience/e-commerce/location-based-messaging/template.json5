{
  "$schema": "https://schema.croct.com/json/v1/catalog-template.json",
  "title": "Location-based messaging",
  "description": "A top bar that displays a message based on the user's location.",
  "metadata": {
    "id": "use-case/e-commerce/location-based-messaging",
    "verified": true,
    "author": {
      "name": "Croct",
      "avatarUrl": "https://github.com/croct-tech.png",
      "websiteUrl": "https://croct.com"
    },
    "documentationUrl": "https://github.com/croct-tech/templates/blob/master/templates/croct/experience/e-commerce/location-based-messaging/README.md",
    "sourceUrl": "https://github.com/croct-tech/templates/blob/master/templates/croct/experience/e-commerce/location-based-messaging/template.json5",
    "coverImageUrl": "https://github.com/croct-tech/templates/blob/master/templates/croct/experience/e-commerce/location-based-messaging/cover.png",
    "installationUrl": "croct://experience/e-commerce/location-based-messaging",
    "categories": [
      "framework/nextjs",
      "framework/react",
      "interface/component",
      "interface/marketing",
      "language/javascript",
      "language/typescript",
      'use-case/e-commerce',
      'use-case/saas'
    ],
    "relatedTemplates": [
      "interface/component/announcement-bar"
    ]
  },
  "options": {
    "version": {
      "type": "string",
      "description": "The version of Next.js to use.",
      "choices": [
        "13",
        "14",
        "15",
        "latest"
      ]
    },
    "router": {
      "type": "string",
      "description": "The router to use.",
      "choices": [
        "app",
        "page"
      ],
      "default": "app"
    },
    "javascript": {
      "type": "boolean",
      "description": "Whether to use JavaScript instead of TypeScript.",
      "default": false
    }
  },
  "actions": [
    {
      "name": "import",
      "template": "croct://ui/component/announcement-bar",
      "options": {
        "projectName": "location-messaging-example",
        "version": "${options.version}",
        "router": "${options.router}",
        "javascript": "${options.javascript}",
        "extension": "${url('./extension.json5')}",
        "content": "${url('./configuration/announcement-bar-content.en.json')}"
      }
    }
  ]
}
