{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "hint": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Hint",
      "private": false,
      "optional": false,
      "position": 0,
      "description": "A short message to help users get started with the project."
    },
    "links": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "title": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Title",
              "private": false,
              "optional": false,
              "position": 0,
              "description": "The title of the link."
            },
            "description": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Description",
              "private": false,
              "optional": false,
              "position": 1,
              "description": "A short description about the linked resource."
            },
            "url": {
              "type": {
                "type": "text",
                "format": "url"
              },
              "label": "URL",
              "private": false,
              "optional": false,
              "position": 2,
              "description": "The URL of the resource."
            }
          }
        },
        "itemLabel": "Link"
      },
      "label": "Links",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "A list of links that provide quick access to useful resources for getting started."
    }
  }
}
