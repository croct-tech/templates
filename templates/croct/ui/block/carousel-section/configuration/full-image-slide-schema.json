{
  "$schema": "https://schema.croct.com/json/v1/content-schema.json",
  "type": "structure",
  "title": "Full-image slide",
  "attributes": {
    "url": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Link",
      "private": false,
      "optional": false,
      "position": 2
    },
    "image": {
      "type": {
        "id": "@croct/file",
        "type": "reference",
        "properties": {}
      },
      "label": "Image",
      "private": false,
      "optional": false,
      "position": 1
    },
    "alt": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Alternative text",
      "private": false,
      "optional": false,
      "position": 0
    }
  }
}
