{
  "$schema": "https://schema.croct.com/json/v1/content-schema.json",
  "type": "structure",
  "title": "Hero Slide",
  "attributes": {
    "cta": {
      "type": {
        "type": "structure",
        "attributes": {
          "url": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Link",
            "private": false,
            "optional": false,
            "position": 1
          },
          "label": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Label",
            "private": false,
            "optional": false,
            "position": 0
          }
        }
      },
      "label": "CTA",
      "private": false,
      "optional": true,
      "position": 3
    },
    "media": {
      "type": {
        "type": "structure",
        "attributes": {
          "imageUrl": {
            "type": {
              "id": "@croct/file",
              "type": "reference",
              "properties": {}
            },
            "label": "Image",
            "private": false,
            "optional": true,
            "position": 0
          },
          "videoUrl": {
            "type": {
              "id": "@croct/file",
              "type": "reference",
              "properties": {}
            },
            "label": "Video",
            "private": false,
            "optional": true,
            "position": 1
          }
        }
      },
      "label": "Media",
      "private": false,
      "optional": true,
      "position": 2
    },
    "offer": {
      "type": {
        "type": "structure",
        "attributes": {
          "price": {
            "type": {
              "type": "number"
            },
            "label": "Price",
            "private": false,
            "optional": true,
            "position": 0
          },
          "coupon": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Coupon",
            "private": false,
            "optional": true,
            "position": 2
          },
          "originalPrice": {
            "type": {
              "type": "number"
            },
            "label": "Original Price",
            "private": false,
            "optional": true,
            "position": 1
          }
        }
      },
      "label": "Offer",
      "private": false,
      "optional": true,
      "position": 4
    },
    "style": {
      "type": {
        "type": "structure",
        "attributes": {
          "centered": {
            "type": {
              "type": "boolean"
            },
            "label": "Centered",
            "private": false,
            "optional": true,
            "position": 0
          },
          "textColor": {
            "type": {
              "type": "text",
              "format": "color"
            },
            "label": "Text Color",
            "private": false,
            "optional": false,
            "position": 2
          },
          "accentColor": {
            "type": {
              "type": "text",
              "format": "color"
            },
            "label": "Accent Color",
            "private": false,
            "optional": false,
            "position": 3
          },
          "backgroundColor": {
            "type": {
              "type": "text",
              "format": "color"
            },
            "label": "Background Color",
            "private": false,
            "optional": false,
            "position": 1
          },
          "backgroundMediaBlur": {
            "type": {
              "type": "number",
              "integer": true,
              "minimum": 0
            },
            "label": "Background Media Blur",
            "private": false,
            "optional": true,
            "position": 5
          },
          "backgroundMediaOpacity": {
            "type": {
              "type": "number",
              "maximum": 1,
              "minimum": 0
            },
            "label": "Background Media Opacity",
            "private": false,
            "optional": true,
            "position": 4
          }
        }
      },
      "label": "Style",
      "private": false,
      "optional": false,
      "position": 5
    },
    "title": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Title",
      "private": false,
      "optional": false,
      "position": 0
    },
    "subtitle": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Subtitle",
      "private": false,
      "optional": false,
      "position": 1
    }
  }
}
