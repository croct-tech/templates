{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "preTitle": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Pre-title",
      "private": false,
      "optional": true,
      "position": 0,
      "description": "The pre-title of the section."
    },
    "heading": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Heading",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "The main heading of the section."
    },
    "description": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Description",
      "private": false,
      "optional": true,
      "position": 2,
      "description": "The description of the section."
    },
    "topics": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "title": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Title",
              "private": false,
              "optional": false,
              "position": 0
            },
            "description": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Description",
              "private": false,
              "optional": false,
              "position": 1
            }
          }
        }
      },
      "label": "Topics",
      "private": false,
      "optional": true,
      "position": 3,
      "description": "A list of topics"
    },
    "button": {
      "type": {
        "type": "structure",
        "attributes": {
          "label": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Label",
            "description": "The label of the button.",
            "private": false,
            "optional": false,
            "position": 0
          },
          "color": {
            "type": {
              "type": "text",
              "format": "color"
            },
            "label": "Color",
            "description": "The background color of the button.",
            "private": false,
            "optional": false,
            "position": 1
          }
        }
      },
      "label": "Button",
      "description": "The button on the right side.",
      "private": false,
      "optional": false,
      "position": 4
    }
  }
}
