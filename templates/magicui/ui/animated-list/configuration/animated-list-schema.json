{
  "$schema": "https://schema.croct.com/json/v1/content-schema.json",
  "type": "structure",
  "title": "Magic UI - Animated list",
  "attributes": {
    "delay": {
      "type": {
        "type": "number",
        "integer": true
      },
      "label": "Delay",
      "private": false,
      "optional": true,
      "position": 0,
      "description": "The delay between each item in ms. The default is 1000ms."
    },
    "notifications": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "name": {
              "type": {
                "type": "text"
              },
              "label": "Name",
              "private": false,
              "optional": false,
              "position": 0,
              "description": "The item name."
            },
            "description": {
              "type": {
                "type": "text"
              },
              "label": "Description",
              "private": false,
              "optional": false,
              "position": 1,
              "description": "The item description."
            },
            "time": {
              "type": {
                "type": "text"
              },
              "label": "Time",
              "private": false,
              "optional": false,
              "position": 2,
              "description": "The time that appears next to the item name."
            },
            "icon": {
              "type": {
                "type": "text"
              },
              "label": "Icon",
              "private": false,
              "optional": false,
              "position": 3,
              "description": "The emoji of each item."
            },
            "color": {
              "type": {
                "type": "text",
                "format": "color"
              },
              "label": "Color",
              "private": false,
              "optional": false,
              "position": 4,
              "description": "The background color of each item icon."
            }
          }
        },
        "itemLabel": "Item"
      },
      "label": "Animated items",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "The list of items."
    }
  }
}
