{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "statistic": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "stats": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Stats",
              "private": false,
              "optional": false,
              "position": 0,
              "description": "The big number above the text."
            },
            "title": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Title",
              "private": false,
              "optional": false,
              "position": 1,
              "description": "The stats title."
            },
            "description": {
              "type": {
                "type": "text",
                "format": "multiline",
                "minimumLength": 1
              },
              "label": "Description",
              "private": false,
              "optional": false,
              "position": 2,
              "description": "The stats description."
            }
          }
        }
      },
      "label": "Stats",
      "private": false,
      "optional": false,
      "position": 0,
      "description": "A list of statistics."
    }
  }
}
