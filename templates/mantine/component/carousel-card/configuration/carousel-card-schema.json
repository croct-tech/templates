{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "images": {
      "type": {
        "type": "list",
        "items": {
          "id": "@croct/file",
          "type": "reference",
          "properties": {}
        },
        "minimumLength": 1,
        "maximumLength": 5
      },
      "label": "Images",
      "description": "Images to display in the card.",
      "private": false,
      "optional": false,
      "position": 0
    },
    "title": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Title",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "The title of the card."
    },
    "description": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Description",
      "private": false,
      "optional": true,
      "position": 2,
      "description": "A short description."
    },
    "stars": {
      "type": {
        "type": "number"
      },
      "label": "Stars",
      "private": false,
      "optional": true,
      "position": 3,
      "description": "The number of stars to show near the title."
    },
    "price": {
      "type": {
        "type": "structure",
        "attributes": {
          "displayPrice": {
            "type": {
              "type": "number"
            },
            "label": "Display price",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The product price."
          },
          "frequency": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Frequency",
            "private": false,
            "optional": false,
            "position": 1,
            "description": "The payment frequency, for example: per night"
          }
        }
      },
      "label": "Price",
      "private": false,
      "optional": false,
      "position": 4,
      "description": "The price of the product."
    },
    "cta": {
      "type": {
        "type": "structure",
        "attributes": {
          "label": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Label",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The label of the button."
          },
          "link": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Link",
            "private": false,
            "optional": false,
            "position": 1,
            "description": "The target URL for the button."
          }
        }
      },
      "label": "Call to action",
      "private": false,
      "optional": true,
      "position": 5,
      "description": "The call to action for the product."
    }
  }
}
