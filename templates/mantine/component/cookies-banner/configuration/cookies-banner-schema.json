{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "title": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Title",
      "private": false,
      "optional": false,
      "position": 0,
      "description": "The title of the message to display in the text bar."
    },
    "message": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Message",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "The message to display in the text bar. It supports basic markdown formatting, like **bold**, *italic*, and [links](https://example.com)."
    },
    "primaryCta": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Primary CTA label",
      "private": false,
      "optional": false,
      "position": 2
    },
    "secondaryCta": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Secondary CTA label",
      "private": false,
      "optional": false,
      "position": 3
    }
  }
}
