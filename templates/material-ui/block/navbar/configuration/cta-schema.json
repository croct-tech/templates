{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "label": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Label",
      "private": false,
      "optional": false,
      "position": 0
    },
    "link": {
      "type": {
        "type": "text",
        "format": "url"
      },
      "label": "Link",
      "private": false,
      "optional": false,
      "position": 1
    },
    "appearance": {
      "type": {
        "type": "text",
        "choices": {
          "text": {
            "label": "Terciary",
            "position": 2,
            "description": "Button variant text"
          },
          "outlined": {
            "label": "Secondary",
            "position": 1,
            "description": "Button variant outlined"
          },
          "contained": {
            "label": "Primary",
            "position": 0,
            "description": "Button variant contained"
          }
        }
      },
      "label": "Appearance",
      "private": false,
      "optional": false,
      "position": 2
    }
  },
  "description": "A call to action button."
}
