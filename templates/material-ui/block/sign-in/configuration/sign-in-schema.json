{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "title": "Sign in",
  "attributes": {
    "form": {
      "type": {
        "type": "structure",
        "attributes": {
          "heading": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Heading",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The main heading for the form."
          },
          "firstInputField": {
            "type": {
              "type": "structure",
              "attributes": {
                "placeholder": {
                  "type": {
                    "type": "text"
                  },
                  "label": "Input Placeholder",
                  "private": false,
                  "optional": true,
                  "position": 0,
                  "description": "The input placeholder of the form."
                }
              }
            },
            "label": "First Input Field",
            "private": false,
            "optional": false,
            "position": 1
          },
          "secondInputField": {
            "type": {
              "type": "structure",
              "attributes": {
                "placeholder": {
                  "type": {
                    "type": "text"
                  },
                  "label": "Input Placeholder",
                  "private": false,
                  "optional": true,
                  "position": 0,
                  "description": "The input placeholder of the form."
                }
              }
            },
            "label": "Second Input Field",
            "private": false,
            "optional": false,
            "position": 2
          },
          "cta": {
            "type": {
              "type": "structure",
              "attributes": {
                "label": {
                  "type": {
                    "type": "text",
                    "minimumLength": 1
                  },
                  "label": "CTA Label",
                  "private": false,
                  "optional": false,
                  "position": 0,
                  "description": "The label for the form’s CTA."
                },
                "link": {
                  "type": {
                    "type": "text",
                    "format": "url"
                  },
                  "label": "CTA Link",
                  "private": false,
                  "optional": false,
                  "position": 1,
                  "description": "The link for the form’s CTA."
                }
              }
            },
            "label": "CTA",
            "private": false,
            "optional": false,
            "position": 3,
            "description": "The CTA of the form."
          },
          "note": {
            "type": {
              "type": "text",
              "format": "multiline"
            },
            "label": "Note",
            "private": false,
            "optional": true,
            "position": 4,
            "description": "The note below the CTA form. It supports basic markdown formatting, like **bold**, *italic*, and [links](https://example.com)."
          }
        }
      },
      "label": "Form",
      "private": false,
      "optional": false,
      "position": 0,
      "description": "The form of the hero."
    },
    "productInformation": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "icon": {
              "type": {
                "type": "text",
                "choices": {
                  "ThumbUp": {
                    "label": "Thumb up alt icon",
                    "position": 2
                  },
                  "Construction": {
                    "label": "Construction icon",
                    "position": 1
                  },
                  "SettingsSuggested": {
                    "label": "Settings suggest icon",
                    "position": 0
                  },
                  "AutoFixHighRounded": {
                    "label": "Auto fix high icon",
                    "position": 3
                  }
                }
              },
              "label": "Icon",
              "private": false,
              "optional": true,
              "position": 0,
              "description": "The icon related to the item."
            },
            "title": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Title",
              "private": false,
              "optional": false,
              "position": 1,
              "description": "The title of the item."
            },
            "description": {
              "type": {
                "type": "text",
                "format": "multiline",
                "minimumLength": 1
              },
              "label": "Description",
              "private": false,
              "optional": false,
              "position": 2,
              "description": "The description of the item."
            }
          }
        },
        "maximumLength": 4,
        "minimumLength": 1
      },
      "label": "Product information",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "List of additional product information."
    }
  },
  "description": "A sign-in section with forms and a side panel for additional information."
}
