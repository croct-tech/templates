{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "title": "Testimonials section",
  "attributes": {
    "title": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Title",
      "private": false,
      "optional": false,
      "position": 0,
      "description": "The section title."
    },
    "description": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Description",
      "private": false,
      "optional": true,
      "position": 1,
      "description": "The section description."
    },
    "testimonials": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "quote": {
              "type": {
                "type": "text",
                "format": "multiline",
                "maximumLength": 500,
                "minimumLength": 1
              },
              "label": "Quote",
              "private": false,
              "optional": false,
              "position": 0,
              "description": "The content of the testimonial."
            },
            "quotee": {
              "type": {
                "type": "structure",
                "attributes": {
                  "avatar": {
                    "type": {
                      "id": "@croct/file",
                      "type": "reference",
                      "properties": {
                        "allowedTypes": [
                          "image/png",
                          "image/jpeg"
                        ]
                      }
                    },
                    "label": "Avatar",
                    "private": false,
                    "optional": false,
                    "position": 0,
                    "description": "The avatar of the quotee."
                  },
                  "name": {
                    "type": {
                      "type": "text",
                      "minimumLength": 1
                    },
                    "label": "Name",
                    "private": false,
                    "optional": false,
                    "position": 1,
                    "description": "The name of the quotee."
                  },
                  "role": {
                    "type": {
                      "type": "text",
                      "minimumLength": 1
                    },
                    "label": "Role",
                    "private": false,
                    "optional": false,
                    "position": 2,
                    "description": "The role of the quotee."
                  },
                  "companyLogo": {
                    "type": {
                      "type": "structure",
                      "attributes": {
                        "lightModeLogo": {
                          "type": {
                            "id": "@croct/file",
                            "type": "reference",
                            "properties": {}
                          },
                          "label": "Light mode logo",
                          "private": false,
                          "optional": false,
                          "position": 0,
                          "description": "The light mode company logo."
                        },
                        "darkModeLogo": {
                          "type": {
                            "id": "@croct/file",
                            "type": "reference",
                            "properties": {}
                          },
                          "label": "Dark mode logo",
                          "private": false,
                          "optional": false,
                          "position": 1,
                          "description": "The dark mode company logo."
                        }
                      }
                    },
                    "label": "Company logo",
                    "private": false,
                    "optional": false,
                    "position": 3,
                    "description": "The company logo of the quotee."
                  }
                }
              },
              "label": "Quotee",
              "private": false,
              "optional": false,
              "position": 1,
              "description": "The autor of the testimonial."
            }
          }
        },
        "maximumLength": 6,
        "minimumLength": 1
      },
      "label": "Testimonials",
      "private": false,
      "optional": false,
      "position": 2,
      "description": "The list of testimonials."
    }
  },
  "description": "A section of testimonials."
}
