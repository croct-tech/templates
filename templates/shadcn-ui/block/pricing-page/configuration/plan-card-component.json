{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "link": {
      "type": {
        "type": "text",
        "format": "url"
      },
      "label": "Checkout link",
      "position": 3
    },
    "name": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Plan name",
      "position": 0
    },
    "price": {
      "type": {
        "type": "structure",
        "attributes": {
          "monthly": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Price per month",
            "position": 0
          },
          "annually": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Price per year",
            "position": 1
          }
        }
      },
      "label": "Price",
      "position": 4
    },
    "features": {
      "type": {
        "type": "list",
        "items": {
          "type": "text",
          "minimumLength": 1
        }
      },
      "label": "Features",
      "position": 5
    },
    "description": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Description",
      "position": 1
    },
    "mostPopular": {
      "type": {
        "type": "boolean"
      },
      "label": "Most popular",
      "position": 2
    }
  },
}
