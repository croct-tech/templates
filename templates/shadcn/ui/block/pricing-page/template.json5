{
  "$schema": "https://schema.croct.com/json/v1/template.json",
  "title": "Pricing page",
  "description": "A dynamic pricing page using Shadcn components and Croct.",
  "options":  {
    "version": {
      "type": "string",
      "description": "The version of Next.js to use.",
      "choices": ["13", "14", "15", "latest"]
    },
    "router": {
      "type": "string",
      "description": "The router to use.",
      "choices": ["app", "page"],
      "default": "app"
    }
  },
  "actions": [
    {
      "name": "import",
      "template": "../../../integration",
      "options": {
        "projectName": "pricing-plan-example",
        "version": "${options.version}",
        "router": "${options.router}",
      }
    },
    {
      "name": "add-dependency",
      "dependencies": ["@croct/template-ui"]
    },
    {
      "name": "import",
      "template": "../../component",
      "options": {
        "components": ["button", "switch", "label"]
      }
    },
    {
      "name": "download",
      "source": "code/components/plan-card.tsx",
      "destination": "${project.path.components}",
    },
    {
      "name": "download",
      "source": "code/components/pricing-section.tsx",
      "destination": "${project.path.components}",
    },
    {
      "name": "define",
      "variables": {
        "routePath": "pricing"
      }
    },
    {
      "name": "define",
      "variables": {
        "exampleDirectory": "${project.path.examples}/${this.routePath}",
        "exampleFile": "${{\
          nextjs: project.path.examples.endsWith('app') ? 'page.tsx' : 'index.tsx',\
          react: 'page.tsx',\
        }[project.platform]}",
      }
    },
    {
      "name": "define",
      "variables": {
        "examplePath": "${this.exampleDirectory}/${this.exampleFile}",
      }
    },
    {
      "name": "download",
      "source": "code/page/${project.platform}/${this.exampleFile}",
      "destination": "${this.exampleDirectory}",
    },
    {
      "name": "create-resource",
      "resources": {
        "components": {
          "plan-card": "${import('configuration/plan-card-component.json')}",
          "pricing-section": "${import('configuration/pricing-section-component.json')}"
        },
        "slots": {
          "pricing-page": {
            "name": "Pricing page",
            "component": "pricing-section",
            "content": {
              "en": "${import('configuration/pricing-section-content.en.json')}",
            }
          }
        }
      },
      "result": {
        "slots": {
          "pricing-page": {
            "id": "slotId",
            "version": "slotVersion"
          }
        }
      }
    },
    {
      "name": "add-slot",
      "slots": ["${this.slotId}"]
    },
    {
      "name": "replace-file-content",
      "files": [
        {
          "path": "${this.examplePath}",
          "replacements": [
            {
              "pattern": "%slotId%",
              "value": "${this.slotId}"
            },
            {
              "pattern": "%slotVersion%",
              "value": "${this.slotVersion}"
            },
            {
              "pattern": "%workspaceUrl%",
              "value": "${project.workspace.url}"
            },
          ]
        }
      ]
    },
    {
      "name": "print",
      "semantics": "success",
      "message": "Component successfully imported at `${this.exampleDirectory}`."
    },
    {
      "name": "test",
      "condition": "${project.platform === 'nextjs'}",
      "then": [
        {
          "name": "import",
          "template": "croct:/utils/example-launcher",
          "options": {
            "path": "${this.routePath}",
          }
        },
      ]
    }
  ]
}
