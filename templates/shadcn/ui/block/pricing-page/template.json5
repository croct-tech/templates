{
  "title": "Pricing page",
  "description": "A dynamic pricing page using Shadcn components and Croct.",
  "actions": [
    {
      "name": "import",
      "template": "../../../integration",
      "options": {
        "projectName": "pricing-plan-example",
      }
    },
    {
      "name": "import",
      "template": "../../component",
      "options": {
        "components": ["button", "switch", "label"]
      }
    },
    {
      "name": "download",
      "source": "code/plan-card.tsx",
      "destination": "${project.path.component}",
    },
    {
      "name": "download",
      "source": "code/pricing-section.tsx",
      "destination": "${project.path.component}",
    },
    {
      "name": "define",
      "variables": {
        "routePath": "pricing"
      }
    },
    {
      "name": "download",
      "source": "code/page.tsx",
      "destination": "${project.path.example}/${this.routePath}",
      "result": {
        "destination": "pagePath"
      }
    },
    {
      "name": "create-resource",
      "resources": {
        "components": {
          "plan-card": "${import('configuration/plan-card-component.json')}",
          "pricing-section": "${import('configuration/pricing-section-component.json')}"
        },
        "slots": {
          "pricing-page": {
            "name": "Pricing page",
            "component": "pricing-section",
            "content": {
              "en": "${import('configuration/pricing-section-content.en.json')}",
            }
          }
        }
      },
      "result": {
        "slots": {
          "pricing-page": "pricingPageSlot"
        }
      }
    },
    {
      "name": "add-slot",
      "slots": ["${this.pricingPageSlot}"]
    },
    {
      "name": "replace-file-content",
      "files": [
        {
          "path": "${this.pagePath}/page.tsx",
          "replacements": [
            {
              "pattern": "%slotId%",
              "value": "${this.pricingPageSlot}"
            }
          ]
        }
      ]
    },
    {
      "name": "print",
      "semantic": "success",
      "message": "Component successfully imported at `${this.pagePath}`."
    },
    {
      "name": "test",
      "condition": "${project.server !== null && project.platform === 'nextjs'}",
      "then": [
        {
          "name": "import",
          "template": "croct:/utils/example-launcher",
          "options": {
            "path": "${this.routePath}",
          }
        },
      ]
    }
  ]
}
