{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "cta": {
      "type": {
        "type": "structure",
        "attributes": {
          "link": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Link",
            "private": false,
            "optional": false,
            "position": 1,
            "description": "The CTA link."
          },
          "label": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Label",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The CTA label."
          }
        }
      },
      "label": "CTA",
      "private": false,
      "optional": true,
      "position": 1,
      "description": "The call to action button."
    },
    "text": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Text",
      "private": false,
      "optional": false,
      "position": 0,
      "description": "The banner text. It supports basic markdown formatting, like **bold**, *italic*, and [links](https://example.com)."
    }
  }
}
