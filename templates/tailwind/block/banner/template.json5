{
  "$schema": "https://schema.croct.com/json/v1/catalog-template.json",
  "title": "Banner",
  "description": "A banner using Tailwind components and Croct.",
  "metadata": {
    "id": "library/tailwind-css/banner",
    "author": {
      "name": "Tailwind",
      "avatarUrl": "https://github.com/tailwindui.png",
      "websiteUrl": "https://tailwindcss.com/?utm_source=croct"
    },
    "documentationUrl": "https://github.com/croct-tech/templates/blob/master/templates/tailwind/block/banner/README.md",
    "sourceUrl": "https://github.com/croct-tech/templates/blob/master/templates/tailwind/block/banner/template.json5",
    "coverImageUrl": "https://github.com/croct-tech/templates/blob/master/templates/tailwind/block/banner/cover.png",
    "categories": [
      "interface/component",
      "interface/marketing",
      "library/tailwind-css",
      "use-case/saas"
    ],
    "relatedTemplates": [
      "interface/component/announcement-bar",
      "use-case/location/geomarketing"
    ]
  },
  "actions": [
    {
      "name": "create-resource",
      "resources": {
        "components": {
          "tailwind-banner": {
            "name": "Tailwind - Banner",
            "description": "The section at the top of a page.",
            "schema": "${import('./configuration/banner-schema.json')}"
          }
        },
        "slots": {
          "tailwind-banner": {
            "name": "Tailwind - Banner",
            "component": "tailwind-banner",
            "content": {
              "en": "${import('./configuration/banner-content.en.json')}"
            }
          }
        }
      }
    }
  ]
}
