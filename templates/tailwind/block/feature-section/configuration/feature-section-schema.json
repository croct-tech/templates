{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "preTitle": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Pre-title",
      "private": false,
      "optional": true,
      "position": 0,
      "description": "The section pre-title."
    },
    "title": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Title",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "The section title."
    },
    "description": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Description",
      "private": false,
      "optional": true,
      "position": 2,
      "description": "The section description."
    },
    "features": {
      "type": {
        "type": "list",
        "items": {
          "type": "structure",
          "attributes": {
            "icon": {
              "type": {
                "type": "text",
                "choices": {
                  "Server": {
                    "label": "Server icon",
                    "position": 2
                  },
                  "LockClosed": {
                    "label": "Lock closed icon",
                    "position": 1
                  },
                  "CloudArrowUp": {
                    "label": "Cloud arrow up icon",
                    "position": 0
                  }
                }
              },
              "label": "Icon",
              "private": false,
              "optional": false,
              "position": 0,
              "description": "The icon related to the feature."
            },
            "title": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Title",
              "private": false,
              "optional": false,
              "position": 1,
              "description": "The feature title."
            },
            "description": {
              "type": {
                "type": "text",
                "minimumLength": 1
              },
              "label": "Description",
              "private": false,
              "optional": false,
              "position": 2,
              "description": "The feature description."
            }
          }
        },
        "minimumLength": 1,
        "maximumLength": 3
      },
      "label": "Features",
      "description": "The features list.",
      "private": false,
      "optional": false,
      "position": 3
    },
    "image": {
      "type": {
        "id": "@croct/file",
        "type": "reference",
        "properties": {}
      },
      "label": "Image",
      "private": false,
      "optional": false,
      "position": 4,
      "description": "The section image."
    }
  },
  "description": "A section of features."
}
