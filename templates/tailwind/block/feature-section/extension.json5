{
  "$schema": "https://schema.croct.com/json/v1/template.json",
  "title": "Feature section customization",
  "description": "A customization template for the feature section block.",
  "options": {
    "exampleDirectory": {
      "type": "string",
      "description": "The path to the example directory.",
      "required": true
    },
    "exampleFile": {
      "type": "string",
      "description": "The name of the example file.",
      "required": true
    },
    "codeExtension": {
      "type": "string",
      "description": "The file extension for the code files.",
      "required": true
    },
    "slotId": {
      "type": "reference",
      "description": "The variable name that holds the slot ID.",
      "required": true
    },
    "slotVersion": {
      "type": "reference",
      "description": "The variable name that holds the slot version.",
      "required": true
    }
  },
  "actions": [
    {
      "name": "create-resource",
      "resources": {
        "components": {
          "tailwind-feature-section": {
            "name": "Tailwind - Feature section",
            "description": "A section of features.",
            "schema": "${import('./configuration/feature-section-schema.json')}"
          }
        },
        "slots": {
          "tailwind-feature-section": {
            "name": "Tailwind - Feature section",
            "component": "tailwind-feature-section",
            "content": {
              "en": "${import('./configuration/feature-section-content.en.json')}"
            }
          }
        }
      },
      "result": {
        "slots": {
          "tailwind-feature-section": {
            "id": "${options.slotId}",
            "version": "${options.slotVersion}"
          }
        }
      }
    },
    {
      "name": "replace-file-content",
      "files": [
        {
          "path": "${options.exampleDirectory}/${options.exampleFile}",
          "replacements": [
            {
              "pattern": "%slotId%",
              "value": "${this[options.slotId]}"
            },
            {
              "pattern": "%slotVersion%",
              "value": "${this[options.slotVersion]}"
            }
          ]
        }
      ]
    }
  ]
}
