{
  "$schema": "https://schema.croct.com/json/v1/catalog-template.json",
  "title": "Feature section",
  "description": "A feature section using Tailwind components and Croct.",
  "metadata": {
    "id": "library/tailwind-css/feature-section",
    "author": {
      "name": "Tailwind",
      "avatarUrl": "https://github.com/tailwindui.png",
      "websiteUrl": "https://tailwindcss.com/?utm_source=croct"
    },
    "documentationUrl": "https://github.com/croct-tech/templates/blob/master/templates/tailwind/block/feature-section/README.md",
    "sourceUrl": "https://github.com/croct-tech/templates/blob/master/templates/tailwind/block/feature-section/template.json5",
    "coverImageUrl": "https://github.com/croct-tech/templates/blob/master/templates/tailwind/block/feature-section/cover.png",
    "categories": [
      "interface/marketing",
      "interface/section",
      "library/tailwind-css",
      "use-case/saas"
    ],
    "relatedTemplates": [
      "interface/section/cards-section",
      "library/material-ui/highlights-section"
    ]
  },
  "actions": [
    {
      "name": "create-resource",
      "resources": {
        "components": {
          "tailwind-features-section": {
            "name": "Tailwind - Features section",
            "description": "A section of features.",
            "schema": "${import('./configuration/feature-section-schema.json')}"
          }
        },
        "slots": {
          "tailwind-features-section": {
            "name": "Tailwind - Features section",
            "component": "tailwind-features-section",
            "content": {
              "en": "${import('./configuration/feature-section-content.en.json')}"
            }
          }
        }
      }
    }
  ]
}
