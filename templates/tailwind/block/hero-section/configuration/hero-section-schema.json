{
  "$schema": "https://schema.croct.com/json/v1/template-content-schema.json",
  "type": "structure",
  "attributes": {
    "heading": {
      "type": {
        "type": "text",
        "minimumLength": 1
      },
      "label": "Heading",
      "private": false,
      "optional": false,
      "position": 1,
      "description": "The main heading of the hero."
    },
    "tagline": {
      "type": {
        "type": "text",
        "format": "multiline",
        "minimumLength": 1
      },
      "label": "Tagline",
      "private": false,
      "optional": false,
      "position": 2,
      "description": "The tagline of the hero."
    },
    "preTitle": {
      "type": {
        "type": "structure",
        "attributes": {
          "cta": {
            "type": {
              "type": "structure",
              "attributes": {
                "link": {
                  "type": {
                    "type": "text",
                    "minimumLength": 1
                  },
                  "label": "Link",
                  "private": false,
                  "optional": false,
                  "position": 1,
                  "description": "The CTA link."
                },
                "label": {
                  "type": {
                    "type": "text",
                    "minimumLength": 1
                  },
                  "label": "Label",
                  "private": false,
                  "optional": false,
                  "position": 0,
                  "description": "The CTA label."
                }
              }
            },
            "label": "CTA",
            "private": false,
            "optional": true,
            "position": 1,
            "description": "The call to action button."
          },
          "message": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Text",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The announcement text."
          }
        }
      },
      "label": "Pre-title",
      "private": false,
      "optional": true,
      "position": 0,
      "description": "The small announcement on the top of the heading."
    },
    "primaryCta": {
      "type": {
        "type": "structure",
        "attributes": {
          "link": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Link",
            "private": false,
            "optional": false,
            "position": 1,
            "description": "The CTA link."
          },
          "label": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Label",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The CTA label."
          }
        }
      },
      "label": "Primary CTA",
      "private": false,
      "optional": false,
      "position": 3,
      "description": "The primary call to action button."
    },
    "secondaryCta": {
      "type": {
        "type": "structure",
        "attributes": {
          "link": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Link",
            "private": false,
            "optional": false,
            "position": 1,
            "description": "The CTA link."
          },
          "label": {
            "type": {
              "type": "text",
              "minimumLength": 1
            },
            "label": "Label",
            "private": false,
            "optional": false,
            "position": 0,
            "description": "The CTA label."
          }
        }
      },
      "label": "Secondary CTA",
      "private": false,
      "optional": true,
      "position": 4,
      "description": "The secondary call to action button."
    }
  }
}
